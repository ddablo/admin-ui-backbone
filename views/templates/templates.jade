    div(class="modal hide fade out loginView", id="myModal", tabindex="-1", role="dialog", aria-labelledby="myModalLabel", aria-hidden="true", style="display:none")
      div(class="modal-header")
        button(type="button", class="close", data-dismiss="modal", aria-hidden="true") Ã—
        h3(id="myModalLabel") Sign-in


      div(class="modal-body")
        p.loginViewForm

      div(class="modal-footer")
        //button(class="btn", data-dismiss="modal", aria-hidden="true") Close
        button(class="btn btn-primary modelOk") Sign-in


// login form
script(type='text/html', id='loginForm')
    form.form-horizontal(name='login', action='/user')
      .control-group
        label.control-label(for="inputEmail") Email
        .controls
          input(type="text", id="inputEmail", name="inputEmail", placeholder="Email")

      .control-group
        label.control-label(for="inputPassword") Password
        .controls
          input(type="password", id="inputPassword", placeholder="Password")
      .control-group
        .controls
          label.checkbox Remember me
            input(type="checkbox")
    a(href="#signUp") need an account?

// sign up form
script(type='text/html', id='loginForm')
    form.form-horizontal(name='signupForm', action='/user/create')
      .control-group
        label.control-label(for="inputEmail") Email
        .controls
          input(type="text", id="inputEmail", name="inputEmail", placeholder="Email")

      .control-group
        label.control-label(for="inputPassword") Password
        .controls
          input(type="password", id="inputPassword", placeholder="Password")
      .control-group
              label.control-label(for="rePassword") Re-type Password
              .controls
                input(type="password", id="inputPassword", placeholder="Re-type Password")
      .control-group
        .controls
          label.checkbox Remember me
            input(type="checkbox")
    a(href="#signApp") need an account?

